{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Garbage Classification App",
            "type": "shell",
            "command": "${workspaceFolder}\\start_application.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "cd ${workspaceFolder}\\backend && .\\venv\\Scripts\\activate && python app.py",
